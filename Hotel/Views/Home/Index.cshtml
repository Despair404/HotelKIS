@{
    ViewBag.Title = "Бронирование номеров";
}
<div class="container text ">
    <h1>Забронируйте номер прямо сейчас!</h1>
   </div>
<div class="container-fluid search" >
    <form class="form-inline" action="/Home/Search" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#results" id="form0" method="post">
        <label for="date">Дата заезда: </label>
        <input type="date" class="form-control" id="from" name="from" required /> &nbsp &nbsp &nbsp
        <label for="date">Дата выезда: </label>
        <input type="date" class="form-control" id="to" name="to" required /> &nbsp &nbsp &nbsp
        <label class="control-label">Тип номера: </label>
        @Html.DropDownList("type", ViewBag.Types as SelectList, "Все",
                    htmlAttributes: new { @class = "form-control type"}) &nbsp &nbsp &nbsp
                    <button type="submit" class="btn btn-primary btnSub">Поиск</button>
                </form>
    <div id="results"></div>
</div>
@Scripts.Render("~/scripts/jquery-3.3.1.min.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")